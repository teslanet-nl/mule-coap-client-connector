	<coap-client:config name="config" host="127.0.0.1"
		logMessages="true" exchangeLifetime="5000"/>

	<sub-flow name="do_get">
		<coap-client:get config-ref="config" path="#[ flowVars.path ]" />
	</sub-flow>

	<sub-flow name="do_post">
		<coap-client:post config-ref="config" path="#[ flowVars.path ]" />
	</sub-flow>

	<sub-flow name="do_put">
		<coap-client:put config-ref="config" path="#[ flowVars.path ]" />
	</sub-flow>

	<sub-flow name="do_delete">
		<coap-client:delete config-ref="config" path="#[ flowVars.path ]" />
	</sub-flow>

</mule>
